{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}/packages/eventory-client",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ts-jest",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "args": [
        "${workspaceFolder}/node_modules/.bin/jest",
        "--preset",
        "ts-jest",
        "${relativeFile}"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest node-utils",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder}/packages/node-utils",
      "args": [],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "cwd": "${workspaceFolder}/packages/server",
      "program": "${workspaceFolder}/packages/server/build/main.js",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.runtime.json"
      },
      "args": ["--skip-api-auth", "--skip-websocket-auth", "--event-server"],
      "runtimeArgs": ["-r", "tsconfig-paths/register"],
      "preLaunchTask": "build server",
      "console": "internalConsole",
      "outputCapture": "std",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "./node_modules/*",
        "webpack:///./*": "./*",
        "webpack:///*": "*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ts",
      "env": {
        // "TS_NODE_PROJECT": "${workspaceFolder}/packages/web/tsconfig.json"
        "NODE_ENV": "production"
      },
      "args": [
        "-r",
        "ts-node/register/transpile-only",
        "-r",
        "tsconfig-paths/register",
        "${workspaceFolder}/${relativeFile}"
      ],
      "console": "internalConsole",
      "outputCapture": "std"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "babel",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node",
      "args": ["${relativeFile}"]
    }
  ]
}
